<h1>Edit {{subject.name}}</h1>


<form action="/subjects/{{subject._id}}?_method=PUT" method="post">
    {{!--Name--}}
    <div>
        <label for="">Name</label>
        <input type="text " class="form-control" name="name" value="{{subject.name}}">
    </div>


    {{!--Code--}}
    <div>
        <label for="">Code</label>
        <input type="text " class="form-control" name="code" value="{{subject.code}}">
    </div>



    {{!--Department--}}
    <div>
        <label for="">Department</label>
        <select name="department" id="" class="form-select">
            <option value="{{_id}}">Computer Science</option>
             <option value="{{_id}}">information Systems</option>
              <option value="{{_id}}">information Technology</option>



            {{#each department}}

            <option value="{{_id}}">{{name}}</option>
            {{/each}}
            
        </select>
    </div>
   
   
    <div class="mt-3">

        <button class="btn btn-sucsses" type="submit">save</button>
    </div>
</form>